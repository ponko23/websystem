extends layout

block script
  script(src='/javascripts/Profile.js')

block content
  main
    h2= title

    form(action='/profile/info', method='post', id='info')
      fieldset
        legend 基本情報
        div
          label ユーザーID：
            input(type='txt', name='userId', value= info.userId, readonly='true')
        div
          label 名前：
            input(type='txt', name='name', value= info.name, class='edit', readonly='true')
        div
          label ふりがな：
            input(type='txt', name='phonetic', value= info.phonetic, class='edit', readonly='true')
        div
          label 生年月日：
            input(type='date', name='birthDay', value= info.birthDay, class='edit', readonly='true')
        div
          label 郵便番号：
            input(type='txt', name='zip', value= info.zip, class='edit', readonly='true')
        div
          label 住所：
            input(type='txt', name='address', value= info.address, class='edit', readonly='true')
        div
          label 電話番号：
            input(type='tel', name='phone', value= info.phone, class='edit', readonly='true')
        div
          label メールアドレス：
            input(type='email', name='email', value= info.email, class='edit', readonly='true')
        div
          label ポートフォリオ：
            input(type='url', name='url', value= info.url, class='edit', readonly='true')
        div
          label 備考：
            input(type='txt', name='note', value= info.note, class='edit', readonly='true')
        div
          input(type='button', value='編集', id='profileEdit', onclick='editOn()')
          input(type='reset', value='キャンセル', id='reset', style='display:none')

    form(action='/profile/career', method='post', id='career')
      fieldset
        legend 職歴
        input(type='button', value='追加', onclick='')
        table

    form(action='/profile/skill', method='post', id='skill')
      fieldset
        legend スキル
        input(type='button', value='追加', onclick='')
        table

    form(action='/profile/license', method='post', id='license')
      fieldset
        legend 資格
        input(type='button', value='追加', onclick='')
        table